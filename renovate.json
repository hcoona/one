{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "third_party/**"
  ],
  "labels": ["renovate"],
  "prConcurrentLimit": 1,
  "platformAutomerge": true,
  "platformCommit": true,
  "packageRules": [
    {
      "matchManagers": [
        "azure-pipelines"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        // Managed by PDM.
        "pip_requirements"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        // Manually manage it.
        "com_github_chenshuo_muduo"
      ],
      "enabled": false
    },
    {
      "matchPackagePrefixes": ["rules_", "io_bazel", "bazel_"],
      "groupName": "bazel_starlark_libs"
    }
  ]
}
