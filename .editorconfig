indent_size = 4

[**/BUILD.bazel]
indent_size = 4

[bazel/third_party/**/*.{BUILD,WORKSPACE}]
indent_size = 4

[**/*.py]
indent_size = 4

[**/*.{bzl,sky}]
indent_size = 4

[**/*.toml]
indent_size = 4