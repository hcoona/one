        ":apr_escape_test_char_h",
        ":apr_h",
        ":apr_private_h",
    ],
    hdrs = glob(["**/*.h"]),
    copts = [
        "-Wno-expansion-to-defined",
        "-Wno-incompatible-pointer-types-discards-qualifiers",  # atomic/unix/builtins.c:71:53
    ],
    defines = [
        "_GNU_SOURCE",
        "_REENTRANT",
        "HAVE_CONFIG_H",
        "LINUX",
    ],
    includes = [
        "./include",
        "./include/arch/unix",
        "./include/private",
