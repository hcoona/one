    name = "base",
    srcs = [
        "strerror.cc",
        "this_thread.cc",
    ],
    hdrs = [
        "strerror.h",
        "this_thread.h",
    ],
    copts = [
        "-Wall",
        "-Wextra",
        "-Werror",
    ],
    visibility = [
        "//bazel:__pkg__",
        "//one/jinduo:__subpackages__",
    ],
    deps = [
        "@com_google_absl//absl/base",
    ],
)

cc_library(
    name = "thread",
    srcs = [
        "thread.cc",
    ],
    hdrs = [
        "thread.h",
    ],
    copts = [
        "-Wall",
        "-Wextra",
        "-Werror",
    ],
    deps = [
        ":base",
        "@com_github_google_glog//:glog",
        "@com_google_absl//absl/base",
        "@com_google_absl//absl/synchronization",
    ],
