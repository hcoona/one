    name = "thread_test",
    srcs = ["thread_test.cc"],
    copts = [
        "-Wall",
        "-Wextra",
        "-Werror",
    ],
    deps = [
        ":thread",
        "@com_google_absl//absl/functional:bind_front",
    ],
